<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
   >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:text="Rate TakePict"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="22sp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kindly! Rate our app before you leave"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="19sp"/>



        <RatingBar
            android:id="@+id/rating"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:progressTint="#EDBA22"
            android:secondaryProgressTint="#EDBA22"
            android:numStars="5"
            android:layout_gravity="center_horizontal"
            android:rating="4.5"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:backgroundTint="@color/button"
                android:background="@drawable/view_shape"                android:textAllCaps="false"
                android:layout_margin="6dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_rateLater"
                android:background="@drawable/buttoncancel"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_margin="6dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Rate later"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>