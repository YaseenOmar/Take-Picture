<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profileFragment"
    android:background="@color/app"
    android:layoutDirection="ltr">


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/image"
        tools:ignore="MissingConstraints" />



    <Button
        android:id="@+id/logout"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="Sign out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/louisgeorgecafebold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




    <Button
        android:id="@+id/adminbut"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="Admin page"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/louisgeorgecafebold"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_image"
        android:src="@drawable/user"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        tools:ignore="MissingConstraints"
        />







    <TextView
        android:id="@+id/tv_nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Full Name: "
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/louis"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img" />

    <TextView
        android:id="@+id/tv_nameUser"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/view_shape"
        android:backgroundTint="#f7f7f7"
        android:textColor="@color/black"
        android:fontFamily="@font/louis"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_personn"
        android:drawablePadding="5dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nameTitle" />

    <TextView
        android:id="@+id/tv_emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Email Address:"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/louis"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nameUser" />


    <TextView
        android:id="@+id/tv_emailUser"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/view_shape"
        android:backgroundTint="#f7f7f7"
        android:textColor="@color/black"
        android:fontFamily="@font/louis"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="5dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_emailTitle" />
    <TextView
        android:id="@+id/tv_passTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Password: "
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/louis"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_emailUser" />

    <TextView
        android:id="@+id/tv_passUser"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/view_shape"
        android:backgroundTint="#f7f7f7"
        android:textColor="@color/black"
        android:fontFamily="@font/louis"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="5dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_passTitle" />





</androidx.constraintlayout.widget.ConstraintLayout>